{% extends 'base.jinja' %}
{% block title %}Purchase Guild Premium{% endblock %}
{% block content %}
    <div class="page page-center">
        <div class="container container-tight py-4">
            {% include 'alerts.jinja' %}
            <form class="card card-md" method="POST" autocomplete="off" novalidate>
                {{ csrf_input | safe }}
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Purchase Premium For Guilds</h2>
{#                    <p>This costs ${{ pricing.unit_amount/100 }} {{ pricing.currency }} per month per guild.</p>#}
                    <div class="mb-3">
                        <label class="form-label" for="quantity">Purchase for X guilds</label>
                        <input id="quantity" name="quantity"  class="form-control"
                               type="number" min="1" max="100" value="1"
                        >
                    </div>
                    <small>You will be redirected to Stripe to view pricing and complete your purchase.</small>
                    <div class="form-footer">
                        <button type="submit" class="btn btn-indigo w-100">Checkout</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}